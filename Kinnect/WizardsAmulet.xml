<sensor>
	<tracker>Microsoft</tracker>
	<mode>Upper Body</mode>
	<mirrormode>true</mirrormode>
	<smoothing>true</smoothing>
	<smoothingfactor>0.5</smoothingfactor>
	<correction>0.5</correction>
	<prediction>0.5</prediction>
	<jitter>0.05</jitter>
	<deviation>0.04</deviation>
</sensor>
<server>
	<transformations>Global coordinates</transformations>
	<automaticassignment>true</automaticassignment>
</server>
<display>
	<showviewerwindow>true</showviewerwindow>
	<background>Depth</background>
	<foreground>Depth</foreground>
	<showconsolewindow>true</showconsolewindow>
	<movechildwindows>true</movechildwindows>
	<savewindowlayout>false</savewindowlayout>
</display>
<gestures>
	<gesture name="iceblitz" timeout="0.5" enabled="true" outputloop="false" outputtimeout="0">
		<input type="2">
			<descriptor>left arm</descriptor>
			<descriptor>at least</descriptor>
			<descriptor>145</descriptor>
			<descriptor>degrees</descriptor>
		</input>
		<output type="0">
			<descriptor>press</descriptor>
			<descriptor>2</descriptor>
			<descriptor>for</descriptor>
			<descriptor>0</descriptor>
		</output>
	</gesture>
	<gesture name="fireball" timeout="0.5" enabled="true" outputloop="false" outputtimeout="0">
		<input type="2">
			<descriptor>right arm</descriptor>
			<descriptor>at least</descriptor>
			<descriptor>145</descriptor>
			<descriptor>degrees</descriptor>
		</input>
		<output type="0">
			<descriptor>press</descriptor>
			<descriptor>1</descriptor>
			<descriptor>for</descriptor>
			<descriptor>0</descriptor>
		</output>
	</gesture>
	<gesture name="cast" timeout="0" enabled="true" outputloop="false" outputtimeout="0">
		<input type="1">
			<descriptor>right hand</descriptor>
			<descriptor>above</descriptor>
			<descriptor>right shoulder</descriptor>
			<descriptor>at least</descriptor>
			<descriptor>15</descriptor>
			<descriptor>centimeters</descriptor>
		</input>
		<input type="4">
			<descriptor>1</descriptor>
			<descriptor>5</descriptor>
			<descriptor>starts</descriptor>
		</input>
		<input type="1">
			<descriptor>right hand</descriptor>
			<descriptor>in front of</descriptor>
			<descriptor>head</descriptor>
			<descriptor>at least</descriptor>
			<descriptor>15</descriptor>
			<descriptor>centimeters</descriptor>
		</input>
		<output type="0">
			<descriptor>press</descriptor>
			<descriptor>c</descriptor>
			<descriptor>for</descriptor>
			<descriptor>0</descriptor>
		</output>
	</gesture>
</gestures>
<plugins/>

